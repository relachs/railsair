<h1>Listing flights</h1>

<table>
  <tr>
    <th>Nr</th>
    <th>Departure datetime</th>
    <th>Arrival datetime</th>
    <th>Departure airport</th>
    <th>Arrival airport</th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%=h flight.nr %></td>
    <td><%=h german_date(flight.departure_datetime) %></td>
    <td><%=h german_date(flight.arrival_datetime) %></td>
    <td><%=h flight.departure_airport.code %></td>
    <td><%=h flight.arrival_airport.code %></td>
    <td><%= link_to 'Show', flight %></td>
    <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
    <td><%= link_to 'Destroy', flight, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New flight', new_flight_path %>